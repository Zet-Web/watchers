@import 'nib'
@font-face {
	font-family: 'font_watchers1';
	src: url('fonts/Oxygen-Regular.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'font_watchersl';
	src: url('fonts/Oxygen-Light.ttf') format('truetype');
	font-weight: normal;
	font-style: normal;
}

//___________________________________________
a
	text-decoration: none
	color: #c6c6c6

body, html
	margin: 0
	padding: 0
	color: #fff

body
	font-family: 'font_watchersl'
	font-size: 12px
	width: 400px
	height: 56px


//___________________________________________

.boxContent
	background-color: #393d3e
	border-radius: 4px
	margin: 6px
	padding: 6px

.loader
	height: 40px
	text-align: center
	vertical-align: middle
	background-image: url(loading.gif)
	background-repeat: no-repeat
	background-position: center center

.infoBlock
	display: none

.hide
	display: none



//BOX________________________________
.box
	padding: 0px
	padding-top: 4px
	margin: 0px
	border-radius: 4px
	color: #fff
	font-size: 14px
	margin-bottom: 8px

	&:last-child
		margin-bottom: 2px

	&.active
		padding: 0px
		box-shadow: inset rgba(0, 0, 0, 0.80) 0px 1px 5px, rgba(255, 255, 255, 0.20) 0px 1px 0px
		font-weight: 400
		background-color: #313235
		color: #fff


//TIT________________________________
ttl
	font-family: 'font_watchers1'
	margin: 0
	padding: 10px
	width: 100%
	display: block
	box-sizing: border-box
	cursor: pointer
	color: #989898
	font-size: 14px
	line-height: 14px
	text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.90)
	border-radius: 3px
	text-rendering: optimizeLegibility
	box-shadow: rgba(0, 0, 0, 0.60) 0px 1px 1px, inset rgba(255, 255, 255, 0.15) 0px 1px 0px
	background: linear-gradient(bottom, #393b3e, #4c4f54);


	&:hover
		color: #fff
		text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.70)
		box-shadow: rgba(0, 0, 0, 0.60) 0px 1px 1px, inset rgba(255, 255, 255, 0.25) 0px 1px 0px
		background: linear-gradient(top, #00f, #d00);
		background: linear-gradient(bottom, #0f89d9, #0abff0);


	.activeNOP &
		margin-bottom: 8px
		color: #fff
		text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.70)
		box-shadow: rgba(0, 0, 0, 0.60) 0px 1px 1px, inset rgba(255, 255, 255, 0.25) 0px 1px 0px
		background: linear-gradient(bottom, #0f89d9, #0abff0);

	.active &
		color: #0bb9ed
		text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.70)
		background-image: none
		background: transparent
		border: none
		box-shadow: none
		cursor: default



//ActiveServers________________________________
.ActiveServers, .preLis, .preLisNoHover
	li
		margin: 0
		padding: 0
		list-style: none

	li a
		border-radius: 3px
		text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.750)
		box-shadow: rgba(0, 0, 0, 0.60) 0px 1px 1px, inset rgba(255, 255, 255, 0.15) 0px 1px 0px
		background-color: #36393c
		border: none
		box-sizing: border-box
		display: block
		width: 100%
		padding: 8px
		margin-bottom: 8px
		color: #0bb9ed
		font-size: 13px
		margin-left 0
		background: linear-gradient(bottom, #424549, #4c4f54);

	li a:before
		content: ""
		float: left
		background-image: url(noun_project_4032.svg)
		display: block
		width: 24px
		height: 24px
		margin-right: 8px
		background-size: 16px 16px
		background-repeat: no-repeat
		top: 0
		background-position: center center
		opacity: 0.5
		background-color: #fff
		border-radius: 3px
		box-shadow: rgba(0, 0, 0, 0.30) 0px 1px 0px, inset rgba(255, 255, 255, 0.35) 0px 0px 4px
		margin-top: -4px
		margin-left: -4px

	li a:hover:before
		opacity: 1
		background-color: #afafaf


	li a:hover
		color: #fff
		text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.30)
		box-shadow: rgba(0, 0, 0, 0.60) 0px 1px 1px, inset rgba(255, 255, 255, 0.30) 0px 1px 0px
		background: linear-gradient(bottom, #0f89d9, #0abff0);

	li:last-child a
		margin-bottom: 0px




.preLisNoHover li a:hover
	color: #000
	border-radius: 3px


.regularButton
	@extends .ActiveServers li a
	&:hover
		@extends .ActiveServers li a:hover



.boxIn
	padding: 10px
	padding-top: 6px



.marginBlock
	height: 1px
	width: 100%
	overflow: hidden

ul, li
	margin: 0
	padding: 0

ul
	margin-left 0

li
	list-style: none


label
	display: inline-block
	padding-left: 5px
	margin-bottom: 5px
	margin-top: 8px
	font-size: 12px
	line-height: 12px
	color: #c3c4c5
	width: 26%
	text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.50)

.regularInput
	display: inline-block
	color: #c3c4c5
	width: 71%
	border: solid 1px rgba(0, 0, 0, 0.4)
	font-size: 13px
	padding: 6px
	margin-bottom: 7px
	border-radius: 2px
	text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.50)
	box-shadow: inset rgba(0, 0, 0, 0.7) 0px 0px 3px, rgba(255, 255, 255, 0.1) 0px 1px 0px
	background-color: #46494d
	box-sizing: border-box
	background: linear-gradient(top, #3d3f43, #424549);


.regularButton
	cursor: pointer
	display: inherit
	width: inherit
	padding: 6px 22px
	margin-left: auto

#no_asociated .preLisNoHover li a
	cursor: default


@css{
	.ActiveServers li a:before, .preLis li a:before, .preLisNoHover li a:before {
		-webkit-filter: invert();
	}
}

